{{#> layout currentPage = "register"}}
<!-- Register Form -->
<main class="container register-form-container mt-5">
  <section class="card shadow d-flex flex-column justify-content-center mx-auto register-form-container">
    <div class="card-body">

      <form action="/register" method="post" class="mx-3">
        <h1 class="mb-5 text-center">Register</h1>

        {{#if messages.error}}
        <div class="alert alert-danger mb-3" role="alert">
          {{messages.error}}
        </div>
        {{/if}}
        <div class="mb-3">
          {{!-- <label for="name" class="form-label">Name</label> --}}
          <input type="text" name="username" id="username" class="form-control" placeholder="username" />
        </div>
        <div class="mb-3">
          {{!-- <label for="email" class="form-label">Email</label> --}}
          <input type="email" name="email" id="email" class="form-control" placeholder="email" />
        </div>
        <div class="mb-3">
          {{!-- <label for="password" class="form-label">password</label> --}}
          <input type="password" name="password" id="password" class="form-control" placeholder="password" />
        </div>
        <div class="mb-3">
          {{!-- <label for="confirmPassword" class="form-label">Confirm Password</label> --}}
          <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="confirm password" />
        </div>
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-primary px-3">Register</button>
        </div>
      </form>
    </div>
  </section>
</main>

{{/layout}}